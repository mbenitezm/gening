h1 Documentos
.row
  .col-md-12
   = link_to 'Nuevo documento', new_document_path(description: params[:description]), class:'btn btn-primary'
.row style="margin-top: 15px"
  .col-md-12
    table.table.table-striped                     
      tr                          
        th Documento
        th Tipo de archivo
        th
        - if current_user.admin?
          th
      - @documents.each do |document|   
        tr
           td = document.description
           td = document.file_file_name.split(".").last
           td = link_to 'Descargar', document.file.url, class:'btn btn-primary btn-xs'
           - if current_user.admin?
              td
                = link_to 'Eliminar', document_path(document), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Â¿Estas seguro?' }
